{
  "compilerOptions": {
    "target": "ES2020", // modern output, Rollup + terser will handle older if needed
    "module": "preserve", // keep ES module syntax for Rollup
    "moduleResolution": "bundler",
    "strict": true, // recommended
    "esModuleInterop": true, // makes CommonJS interop cleaner
    "skipLibCheck": true,
    "composite": true,
    "emitDeclarationOnly": true,
    "lib": [
      "esnext"
    ],
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/web/**.ts"
  ]
}